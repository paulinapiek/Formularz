<form asp-action="Form" method="post">
    <div>
        <label asp-for="Imie">Twoje imie</label>
        <input asp-for="Imie" />
    </div>
     <div>
        <label asp-for="Email">TTwoj email</label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="Temat">Temat</label>
        <input asp-for="Temat" />
    </div>
    <div>
        <label asp-for="Tresc">Tresc</label>
        <input asp-for="Tresc" />
    </div>
    <div><input type="submit" /></div>
</form>
@using (Html.BeginForm("Form", "Dane", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new {@class="text-danger"})
    <p>Twoje imie: @Html.TextBoxFor(a=>a.Imie)</p>
    <p>Twoj email: @Html.TextBoxFor(a=>a.Email)</p>
    <p>Temat: @Html.TextBoxFor(a=>a.Temat)</p>
    <p>Tresc: @Html.TextBoxFor(a=>a.Tresc)</p>
    <input type="submit" placeholder="Prześlij"/>
}

